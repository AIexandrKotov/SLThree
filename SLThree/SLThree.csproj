<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net471;netstandard2.1;net7.0</TargetFrameworks>
    <BaseOutputPath>..\bin</BaseOutputPath>
    <Authors>Alexandr Kotov</Authors>
    <Description>.NET script programming language</Description>
    <Copyright>Alexandr Kotov 2023</Copyright>
    <PackageProjectUrl>slt-lang.github.io</PackageProjectUrl>
    <RepositoryUrl>https://github.com/AIexandrKotov/SLThree</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>language;ast;scripts;script-lang;commands</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>0.9.0-alpha.720</Version>
    <PackageReleaseNotes>$([System.IO.File]::ReadAllText("$(MSBuildProjectDirectory)/docs/versions/last"))</PackageReleaseNotes>
    <PackageReadmeFile>nugetreadme.md</PackageReadmeFile>
    <PackageIcon>nugetlogo.png</PackageIcon>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Pegasus" Version="4.1.0" />
  </ItemGroup>
  <ItemGroup>
    <PegGrammar Include="Language\syntax.peg" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="docs\locales\en.dat" />
    <EmbeddedResource Include="docs\locales\ru.dat" />
    <EmbeddedResource Include="docs\versions\last" />
  </ItemGroup>
  <ItemGroup>
    <None Include="docs\nugetreadme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <None Include="docs\nugetlogo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="&quot;..\verser\verser.exe&quot; --append &quot;SLThree&quot;" />
  </Target>
</Project>