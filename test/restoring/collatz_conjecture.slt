max = 0;
x = 1;
while (x < 1000000) {
    index = x;
    step = 0;
    while (index > 1) {
        if (index % 2 == 0) {
            index /= 2;
            step += 1;
        } else {
            index = (3 * index + 1) / 2;
            step += 2;
        }
    }
    e = step;
    if (e > max)
        max = e;
    x += 1;
}
max;